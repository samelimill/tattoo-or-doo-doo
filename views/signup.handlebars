<form class="signup-form">
  <div class="flex justify-center items-center">
  <div class="w-96 p-6 shadow-lg bg-white rounded-md">
    <h1 class="text-black text-3xl block text-center font-semibold"><i class="fa-solid fa-skull"></i> Sign Up</h1>
    <hr class="mt-3">
    <div class="mt-3">
      <label for="username" class="block text-base mb-2">Username</label>
      <input type="text" id="username-signup" class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 text-black" placeholder="Enter Username..." required>
    </div>
     <div class="mt-3">
      <label for="password" class="block text-base mb-2">Password</label>
      <input type="password" id="password-signup" class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 text-black" placeholder="Enter Password..." required>
    </div>
    <div class="mt-3">
        <label for ="email" class="block text-base mb-2">Email</label>
        <input type="email" class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 text-black" placeholder="Enter Email..." required>
      </div>
    <div class="mt-5">
      <button type="submit" class="border-2 border-gray-800 bg-gray-800 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-black font-semibold" id="signup">Sign Up</button>
    </div>
  </div>
</div>
</form>

<script src="/public/js/signup.js"></script>